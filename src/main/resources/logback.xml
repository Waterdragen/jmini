<configuration>
    <logger name="com.example.Main" level="DEBUG" />
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%-5level] [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="com.example.Main" level="DEBUG">
        <appender-ref ref="CONSOLE" />
    </logger>
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>